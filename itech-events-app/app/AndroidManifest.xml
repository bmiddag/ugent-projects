<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itech.events"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.itech.events.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itech.events.EventsActivity"
            android:label="@string/title_activity_events" >
        </activity>
        <activity
            android:name="com.itech.events.PeopleActivity"
            android:label="@string/title_activity_people" >
        </activity>
        <activity
        	android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:name="com.itech.events.AddPersonActivity"
            android:label="@string/title_activity_add_person" >
            <intent-filter>
                <action android:name="com.itech.events.ADD_PERSON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.itech.events.EDIT_PERSON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
        	android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:name="com.itech.events.ShowPersonActivity"
            android:label="@string/title_activity_show_person" >
            <intent-filter>
                <action android:name="com.itech.events.SHOW_PERSON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
        	android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:name="com.itech.events.AddEventActivity"
            android:label="@string/title_activity_add_event" >
        </activity>
        <activity
        	android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:name="com.itech.events.ShowEventActivity"
            android:label="@string/title_activity_show_event" >
        </activity>
        <activity
        	android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:name="com.itech.events.ShowMessageActivity"
            android:label="@string/title_activity_show_message" >
        </activity>
        <activity
        	android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:name="com.itech.events.AddConfirmationActivity"
            android:label="@string/title_activity_add_confirmation" >
        </activity>
        <activity
        	android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:name="com.itech.events.AddMessageActivity"
            android:label="@string/title_activity_add_message" >
        </activity>
    </application>

</manifest>
